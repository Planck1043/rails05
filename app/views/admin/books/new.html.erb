<h1>新书上线</h1>
<%= form_for [:admin, @book] do |f| %>
  <p>
    <%= f.label "书名" %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label "简介" %>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label "库存" %>
    <%= f.number_field :book_stock %>
  </p>

  <p>
    <%= f.submit "提交" %>
  </p>
<% end %>
